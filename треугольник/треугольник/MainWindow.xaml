<Window x:Class="TriangleAreaCalculation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Triangle Area Calculation" Height="250" Width="350">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите три стороны треугольника:" Margin="0 0 0 10"/>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="Сторона A:" Width="59" RenderTransformOrigin="0.26,0.455"/>
                <TextBox x:Name="txtSideA" Width="100" RenderTransformOrigin="0.74,0.318"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="Сторона B:" Width="60"/>
                <TextBox x:Name="txtSideB" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="Сторона C:" Width="60"/>
                <TextBox x:Name="txtSideC" Width="100"/>
            </StackPanel>
            <Button Content="Посчитать" Click="CalculateArea_Click" Width="100" Margin="0 10 0 0"/>
            <TextBlock x:Name="txtResult" Margin="0 20 0 0"/>
        </StackPanel>
    </Grid>
</Window>
